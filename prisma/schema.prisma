generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  threshold Float    @default(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Alert {
  id        Int      @id @default(autoincrement())
  wallet    String
  amount    Float
  createdAt DateTime @default(now())
}
